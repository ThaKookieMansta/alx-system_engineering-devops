global
    log 127.0.0.1 local0 notice
    maxconn 2000
    user haproxy
    group haproxy

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    retries 3
    option redispatch
    timeout connect  5000
    timeout client  30000
    timeout server  30000

frontend http-in
    timeout client  30000
    bind 0:80 ssl crt /etc/letsencrypt/live/www.mukirae.tech/www.mukirae.tech.pem
    default_backend servers

backend servers
    timeout connect 3000
    timeout server  30000
    balance roundrobin
    server 262337-web-01 34.227.93.59:80 check
    server 262337-web-02 18.234.192.168:80 check
